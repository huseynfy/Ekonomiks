@model AllViewModel
<section class="sections">
    <div class="row">
        <div class="col-lg-12 col-sm-12 col-md-12 pattern">
            <img src="~/img/pattern.png" width="100%" height="221px" alt="pattern" id="patternimage">
            <p class="patterntext">MÜSAHİBƏ</p>
            <p class="patterntextinterviews"><a asp-controller="home" asp-action="index">ANA SƏHİFƏ</a> | <a asp-action="main">MÜSAHİBƏ</a></p>
        </div>
    </div>
</section>
<section class="sections">
    <div class="container">
        <div class="row interviewsrow">
            @foreach (var item in Model.Interviews.Take(1))
            {
                <div class="col-lg-8 col-md-12 col-sm-12">
                    <a asp-controller="interview" asp-action="index" asp-route-id="@item.Id">
                    <img src="~/img/@item.Image" alt="" width="770" height="400" class="img-fluid rounded"></a>
                </div>
                <div class="col-lg-4 col-md-12 col-sm-12 interviewheadleftside">
                    <p class="interviewhead">
                    <a asp-controller="interview" asp-action="index" asp-route-id="@item.Id">@item.Header </a> </p>
                    <p class="interviewbody">
                    <a asp-controller="interview" asp-action="index" asp-route-id="@item.Id">@item.Body.Substring(0,150)...</a></p>
                    <div class="datetimeinterview">@item.DateTime.ToShortDateString()</div>
                </div>
            }

        </div>
    </div>
</section>
<section class="sections">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 d-flex justify-content-between">
                <p class="interviewsheader">MÜSAHİBƏLƏR</p>
                <div class="interviewfilters"><a href="" class="activesearchfilter">son xəbər  
                     </a>| <a href="" class="nonactivesearchfilter">gündəm</a> </div>
            </div>
            @foreach (var item in Model.Interviews.Skip(1).Take(6))
            {
                <div class="col-lg-4 col-md-12 col-sm-12">
                    <a asp-controller="interview" asp-action="index" asp-route-id="@item.Id"> 
                    <img src="~/img/@item.Image" width="370" height="227" alt="" class="mt-3 rounded"></a>
                    <p class="interviewbodyinfo"> 
                    <a asp-controller="interview" asp-action="index" asp-route-id="@item.Id">@item.Header</a></p>
                </div>
            }
            <div class="col-lg-12 col-md-12 col-sm-12">
                <div class="paginations">
                    @for (int i = 0; i < ViewBag.PageCount; i++)
                    {

                        if (i == ViewBag.Page)
                        {
                            <a class="activepagination" href="/interview/main?page=@i">@(i + 1)</a>
                        }
                        else
                        {
                            <a href="/interview/main?page=@i">@(i + 1)</a>

                        }

                    }
                    @*<button class="leftbutton"><i class="fas fa-arrow-left rightlefticons"></i></button>

        <button class="rightbutton"><i class="fas fa-arrow-right rightlefticons"></i></button>*@

                </div>
            </div>
        </div>
    </div>
</section>