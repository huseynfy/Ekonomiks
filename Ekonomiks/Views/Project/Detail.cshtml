@model AllViewModel
<section class="sections">
    <div class="row">
        <div class="col-lg-12 col-sm-12 col-md-12 col-xl-12 col-xs-12 pattern">
            <img src="~/img/pattern.png" width="100%" height="221px" alt="pattern" id="patternimage">
            <p class="patterntext">LAYİHƏLƏR</p>
            <p class="patterntextprojects">
                <a asp-controller="home" asp-action="index">ANA SƏHİFƏ</a> |
                <a asp-controller="project" asp-action="index">LAYİHƏLƏR</a>
            </p>
        </div>
    </div>
</section>
<section class="sections">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <p class="projecthead">
                   @Model.GetProject.Header
                </p>
            </div>
            <div class="col-lg-12 col-md-12 col-sm-12">
                <img src="~/img/@Model.GetProject.Image" width="100%" height="617px" alt="" class="rounded img-fluid shadow">
            </div>
            <div class="col-lg-12 col-md-12 col-sm-12 col-12">
                @if (Model.GetProject.Info != null)
                {
                    <p class="projectinfo">Layihənin ideyası və qısa məzmunu</p>
                    <p class="projectbody">@Model.GetProject.Info </p>
                }
                @if (Model.GetProject.Importance != null)
                {
                    <p class="projectinfo">Mövzunun ictimai əhəmiyyəti və aktuallığı </p>
                    <p class="projectbody">@Model.GetProject.Importance</p>
                }
                @if (Model.GetProject.Goal != null)
                {
                    <p class="projectinfo">Layihənin məqsədi və qarşıya qoyulan vəzifələr</p>
                    <p class="projectbody">@Model.GetProject.Goal</p>
                }


            </div>
        </div>
    </div>
</section>
<section class="sections">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <p class="moreprojects">
                    <a asp-controller="project" asp-action="index">
                        DİGƏR LAYİHƏLƏR
                        <svg width="20" height="13" viewBox="0 0 20 13" class="viewallicon"
                             fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M4.73542e-07 7.58331L15.3508 7.58332L11.4671 11.4671L13 13L19.5 6.5L13 -5.68248e-07L11.4671 1.53293L15.3508 5.41668L6.62955e-07 5.41668L4.73542e-07 7.58331Z"
                                  fill="#204c86" />
                        </svg>
                    </a>
                </p>
            </div>
            @foreach (var item in Model.Projects.Take(3))
            {
                <div class="col-lg-4 col-md-12 col-sm-12">
                    <a asp-controller="project" asp-action="detail" asp-route-id="@item.Id">
                        <img src="~/img/@item.Image" class="moreprojectsimg w-100 rounded shadow">
                    </a>

                    <p class="moreprojectshead">
                    <a asp-controller="project" asp-action="detail" asp-route-id="@item.Id">@item.Header</a></p>
                    
                </div>
            }
        </div>
    </div>
</section>