@model AllViewModel
<section class="sections">
    <div class="row">
        <div class="col-lg-12 col-sm-12 col-md-12 pattern">
            <img src="~/img/pattern.png" width="100%" height="221px" alt="pattern" id="patternimage">
            <p class="patterntext">LAYİHƏLƏR</p>
            <p class="patterntextprojects"><a asp-controller="home" asp-action="index">ANA SƏHİFƏ</a> | 
            <a asp-controller="project" asp-action="index">LAYİHƏLƏR</a></p>
        </div>
    </div>
</section>
<section class="sections">
    <div class="container">
        <div class="row">
            @foreach (var item in Model.Projects)
            {
                <div class="col-lg-6 col-md-12 col-sm-12">
                    <div class="project">
                        <a asp-controller="project" asp-action="detail" asp-route-id="@item.Id">
                        <img src="~/img/@item.Image" alt="proyekt" class="rounded projectimages w-100 shadow"></a>
                        <p class="titleofproject"> 
                        <a asp-controller="project" asp-action="detail" asp-route-id="@item.Id">@item.Header</a> </p>
                        <p class="bodyofproject">
                            <a asp-controller="project" asp-action="detail" asp-route-id="@item.Id">@item.Info.Substring(0,80)...</a>
                            <a asp-controller="project" asp-action="detail" asp-route-id="@item.Id" class="readmore">Read more</a>
                        </p>
                    </div>
                </div>
            }

        </div>
    </div>
</section>

