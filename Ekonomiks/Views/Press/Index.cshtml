@model AllViewModel
<section class="sections">
    <div class="row">
        <div class="col-lg-12 col-sm-12 col-md-12 pattern">
            <img src="img/pattern.png" width="100%" height="221px" alt="pattern" id="patternimage">
            <p class="patterntext">MƏTBUAT</p>
            <p class="patterntext1"><a asp-controller="home" asp-action="index">ANA SƏHİFƏ</a> | <a asp-controller="press">MƏTBUAT</a></p>
        </div>
    </div>
</section>
<section class="sections responsivesectionpress1">
    <div class="container">
        <div class="row interviewrow">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <p class="headers">
                    <a asp-controller="press" asp-action="more" asp-route-categoryName="Economy" asp-route-heading="İQTİSADİYYAT">
                        İqtisadiyyat
                        @if (Model.News.Where(x => x.Category == "Economy").Count() > 1)
                        {
                            <svg width="20" height="13" viewBox="0 0 20 13" class="viewallicon" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path d="M4.73542e-07 7.58331L15.3508 7.58332L11.4671 11.4671L13 13L19.5 6.5L13 -5.68248e-07L11.4671 1.53293L15.3508 5.41668L6.62955e-07 5.41668L4.73542e-07 7.58331Z" fill="#204c86" />
                            </svg>
                        }

                    </a>
                </p>
            </div>
        </div>
        <div class="row">
            @foreach (var item in Model.News.Where(x => x.Category == "Economy").Take(1))
            {
                <div class="col-lg-6 col-md-12 col-sm-12 divwithimageresponsive">
                    <a asp-controller="news" asp-action="index" asp-route-id="@item.Id"><img src="~/img/@item.Image" width="570px" height="370px" alt="" class="rounded w-100"></a>
                    <p class="infoabouttext1"><a asp-controller="news" asp-action="index" asp-route-id="@item.Id">@item.Header</a></p>
                    <span class="datetime">@item.DateTime.ToShortDateString()</span>
                </div>
            }
            @foreach (var item in Model.News.Where(x => x.Category == "Economy").Skip(1).Take(1))
            {
                <div class="col-lg-5 col-md-12 col-sm-12 pl-5">
                    <a asp-controller="news" asp-action="index" asp-route-id="@item.Id">
                        <img src="~/img/@item.Image" width="370px" height="236px" class="presspageadditionalimages rounded">
                    </a>
                    <p class="infoabouttextpresspage"><a asp-controller="news" asp-action="index" asp-route-id="@item.Id">@item.Header.Substring(0, 50)...</a></p>
                    <span class="datetimepress">@item.DateTime.ToShortDateString()</span>
                </div>
            }
            @foreach (var item in Model.News.Where(x => x.Category == "Economy").Skip(2).Take(1))
            {
                <div class="col-lg-6 col-md-12 offset-lg-6 col-sm-12 presspagealignleft pl-5">
                    <a asp-controller="news" asp-action="index" asp-route-id="@item.Id">
                    <img src="~/img/@item.Image" width="370px" height="236px" class="rounded presspageadditionalimages"></a>
                    <p class="infoabouttextpresspage">
                        <a asp-controller="news" asp-action="index" asp-route-id="@item.Id">@item.Header.Substring(0, 50)...</a>
                    </p>
                    <span class="datetimepress">@item.DateTime.ToShortDateString()</span>
                </div>
            }

        </div>
    </div>
</section>
