@model AllViewModel
<section class="sections">
    <div class="row">
        <div class="col-lg-12 col-sm-12 col-md-12 pattern">
            <img src="~/img/pattern.png" width="100%" height="221px" alt="pattern" id="patternimage">
            <p class="patterntext">@Model.Header</p>
        </div>
    </div>
</section>
<section class="sections">
    <div class="container">
        <div class="row mt-5">
            @foreach (var item in Model.News)
            {
                <div class="col-lg-4 col-md-12 col-sm-12">
                    <a asp-controller="news" asp-action="index" asp-route-id="@item.Id">
                        <img src="~/img/@item.Image" width="370px" height="227px" alt="@item.Header" 
                             class="mt-3 rounded">
                    </a>
                    <p class="interviewbodyinfo">
                        <a asp-controller="news" asp-action="index" asp-route-id="@item.Id">@item.Header </a>
                    </p>
                </div>
            }


