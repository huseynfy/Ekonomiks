                            {
                                  <a asp-controller="search" asp-action="index" asp-route-page="@i" class="activepagination">@(i + 1)</a>
                                    }
                             else
                           {
                                  <a asp-controller="search" asp-action="index" asp-route-page="@i" >@(i + 1)</a>

                            }

                      }
                            </div>
                </div>
            }*@

        </div>
    </div>
</section>