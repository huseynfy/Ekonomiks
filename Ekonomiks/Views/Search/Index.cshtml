@model AllViewModel
<section class="sections">
    <div class="row">
        <div class="col-lg-12 col-sm-12 col-md-12 pattern">
            <img src="~/img/pattern.png" width="100%" height="221px" alt="pattern" id="patternimage">
            <p class="patterntext">AXTARIŞ NƏTİCƏLƏRİ</p>
            <p class="patterntextsearch"><a asp-controller="home" asp-action="index">ANA SƏHİFƏ</a> |
            <a asp-controller="search" asp-action="index">AXTARIŞ NƏTİCƏLƏRİ</a></p>
        </div>
    </div>
</section>
<section class="sections">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <form asp-controller="search" asp-action="index" method="post">
                    <input type="search" name="search" class="searchpageinput">
                    <button type="submit" class="searchbuttonforsearchdetail">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                            <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z" />
                        </svg>
                    </button>
                </form>
                <div asp-validation-summary="ModelOnly" class="errormessage1"></div>
            </div>
            <div class="col-lg-12 col-md-12 col-sm-12 d-flex justify-content-between">
                @if (ViewBag.Search != null && Model.News.Where(x=>x.Header.Contains(ViewBag.Search))!=null)
                {
                    
                        <p class="searchresults">@Model.News.Count() nəticə tapıldı</p>
                    
                }
                else
                {
                    <p class="searchresults">Axtarış</p>
                }

                <div class="searchfilters">
                    <a href="" class="activesearchfilter">
                        son xəbər
                    </a>| <a href="" class="nonactivesearchfilter">əlaqəli xəbər</a>
                </div>
            </div>
        </div>
        <div class="row searchresultsalltogether">
            @if (ViewBag.Search != null)
            {
                @foreach (var item in Model.News)
                {
                    <div class="col-lg-12 col-md-12 col-sm-12 allsearchresults">

                        <p class="searchresulthead">
                            <a asp-controller="news" asp-action="index" asp-route-Id="@item.Id"> @item.Header </a>
                        </p>
                        <p class="searhcresultbody">
                            <a asp-controller="news" asp-action="index" asp-route-Id="@item.Id">   @item.Body.Substring(0, 100)...</a>
                            <a asp-controller="news" asp-action="index" asp-route-Id="@item.Id" class="readmore">Read more</a>
                        </p>

                        <span class="datetimeforsearchresults">@item.DateTime.ToShortDateString()</span>
                    </div>
                }
            }

            @*@if (ViewBag.Search != null)
            {
                <div class="col-lg-12 col-md-12 col-sm-12">
                    <div class="paginations">
                        @for (int i = 0; i < ViewBag.PageCount; i++)
